# GCP Project Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Storage Configuration
GCS_BUCKET=your-bucket-name
BIGQUERY_DATASET=your-dataset-name

# BigTable Configuration
BIGTABLE_INSTANCE=your-bigtable-instance
BIGTABLE_TABLE=payment-transactions

# Pub/Sub Configuration
PUBSUB_ACH_SUBSCRIPTION=projects/your-project/subscriptions/ach-subscription
PUBSUB_WIRE_SUBSCRIPTION=projects/your-project/subscriptions/wire-subscription
PUBSUB_RTP_SUBSCRIPTION=projects/your-project/subscriptions/rtp-subscription

# Pipeline Configuration
WINDOW_SIZE=60
RUNNER=DataflowRunner
PIPELINE_RUNNER=DirectRunner  # or DataflowRunner

# Service Account Configuration (optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Dataflow Job Configuration
TEMP_LOCATION=gs://${GCS_BUCKET}/temp
STAGING_LOCATION=gs://${GCS_BUCKET}/staging
JOB_NAME_PREFIX=payment-processing

# Error Handling Configuration
ERROR_DATASET=error_dataset
MAX_RETRIES=3

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_DATASET=monitoring_dataset
